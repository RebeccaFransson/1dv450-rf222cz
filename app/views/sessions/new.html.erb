
<div class="page-header">
  <h1>Sign in</h1>
  <%=	 link_to "Register new User", new_user_path %>
</div>
<%	 if flash[:error] %>
    <p><%=	  flash[:error] %></p>
<%	end  %>

<%=	  simple_form_for :session, url: sessions_path, html: {class: 'form-horizontal'} do |f| %>
    <%=	 f.input :email %>
    <%=	 f.input :password %>
    <%=	 f.button :submit, "Sign In" %>
<% end %>


